<layouts>
    <!-- Main layout with percentage-based positioning -->
    <layout id="MainLayout">
        <drawable class="Background" />
        
        <!-- FIRST LINE: BG, glucose value, arrow -->
        <label id="label" x="30%" y="25%" color="Graphics.COLOR_DK_GREEN" 
               justification="Graphics.TEXT_JUSTIFY_CENTER" 
               font="Graphics.FONT_SYSTEM_XTINY" />
               
        <label id="value" x="center" y="10%" color="Graphics.COLOR_WHITE" 
               justification="Graphics.TEXT_JUSTIFY_CENTER" 
               font="Graphics.FONT_SYSTEM_LARGE" />
               
        <bitmap id="arrow" x="65%" y="25%" filename="../drawables/Unknown.svg" 
                scaleX="6%" scaleY="6%" scaleRelativeTo="screen">
            <palette>
                <color>FFFFFF</color>
            </palette> 
        </bitmap>
        
        <!-- SECOND LINE: IOB, time, aiSR - moved up by 2% -->
        <bitmap id="iobIcon" x="8%" y="70%" filename="../drawables/drop.svg" 
                scaleX="6%" scaleY="6%" scaleRelativeTo="screen">
            <palette>
                <color>00B3D2</color>
            </palette>
        </bitmap>
        
        <label id="valueIOB" x="25%" y="58%" color="Graphics.COLOR_WHITE" 
               justification="Graphics.TEXT_JUSTIFY_CENTER" 
               font="Graphics.FONT_SYSTEM_LARGE" />
               
        <label id="valueTime" x="center" y="63%" color="Graphics.COLOR_WHITE" 
               justification="Graphics.TEXT_JUSTIFY_CENTER" 
               font="Graphics.FONT_SYSTEM_SMALL" />
        
        <bitmap id="aiSRIcon" x="64%" y="72%" filename="../drawables/UpDown.svg" 
                scaleX="6%" scaleY="6%" scaleRelativeTo="screen">
            <palette>
                <color>00FF00</color>
            </palette> 
        </bitmap>
               
        <label id="valueAiSR" x="92%" y="58%" color="Graphics.COLOR_WHITE" 
               justification="Graphics.TEXT_JUSTIFY_RIGHT" 
               font="Graphics.FONT_SYSTEM_LARGE" />
    </layout>

    <!-- Bottom/Inverted layout - lines completely swapped -->
    <layout id="BottomLayout">
        <drawable class="Background" />
        
        <!-- FIRST LINE (top position): IOB, time, aiSR - also adjusted -->
        <bitmap id="iobIcon" x="10%" y="12%" filename="../drawables/drop.svg" 
                scaleX="6%" scaleY="6%" scaleRelativeTo="screen">
            <palette>
                <color>00B3D2</color>
            </palette>
        </bitmap>
        
        <label id="valueIOB" x="25%" y="0%" color="Graphics.COLOR_WHITE" 
               justification="Graphics.TEXT_JUSTIFY_CENTER" 
               font="Graphics.FONT_SYSTEM_LARGE" />
               
        <label id="valueTime" x="center" y="5%" color="Graphics.COLOR_WHITE" 
               justification="Graphics.TEXT_JUSTIFY_CENTER" 
               font="Graphics.FONT_SYSTEM_SMALL" />
        
        <bitmap id="aiSRIcon" x="64%" y="14%" filename="../drawables/UpDown.svg" 
                scaleX="6%" scaleY="6%" scaleRelativeTo="screen">
            <palette>
                <color>00FF00</color>
            </palette> 
        </bitmap>
               
        <label id="valueAiSR" x="92%" y="0%" color="Graphics.COLOR_WHITE" 
               justification="Graphics.TEXT_JUSTIFY_RIGHT" 
               font="Graphics.FONT_SYSTEM_LARGE" />
        
        <!-- SECOND LINE (bottom position): BG, glucose value, arrow -->
        <label id="label" x="35%" y="60%" color="Graphics.COLOR_DK_GREEN" 
               justification="Graphics.TEXT_JUSTIFY_CENTER" 
               font="Graphics.FONT_SYSTEM_XTINY" />
               
        <label id="value" x="center" y="45%" color="Graphics.COLOR_WHITE" 
               justification="Graphics.TEXT_JUSTIFY_CENTER" 
               font="Graphics.FONT_SYSTEM_LARGE" />
               
        <bitmap id="arrow" x="65%" y="60%" filename="../drawables/Unknown.svg" 
                scaleX="6%" scaleY="6%" scaleRelativeTo="screen">
            <palette>
                <color>FFFFFF</color>
            </palette> 
        </bitmap>
    </layout>

</layouts>